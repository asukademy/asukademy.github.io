        <img class="uk-border-rounded work-img" src="{{ this.basepath }}media/courses/teaser/{{ course.id }}.png" alt="{{ course.title }} Image">
    </a>
    <h2>{{ course.title ?: 'Course Title' }}</h2>
    <p class="uk-article-lead uk-text-muted">{{ course.lead ?: 'Course Lead' }}</p>
